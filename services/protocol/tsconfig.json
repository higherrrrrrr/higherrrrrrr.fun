{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": ["es2019", "dom"],
    "types": ["mocha", "chai", "node"],
    "resolveJsonModule": true
  },
  "include": ["programs/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
